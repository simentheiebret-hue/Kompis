{
  "name": "kompis-app",
  "version": "1.0.0",
  "type": "module",
  "main": "./App.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "check:no-js": "! find . -type f \\( -name '*.js' -o -name '*.jsx' \\) ! -name '*.cjs' | grep -v node_modules | grep -v .expo | grep -v .pnpm-store | grep . && echo '✓ No .js/.jsx files found' || (echo '✗ ERROR: Use .ts/.tsx instead of .js/.jsx' && exit 1)",
    "validate": "pnpm typecheck && pnpm lint && pnpm check:no-js"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.10.1",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/stack": "^7.6.16",
    "expo": "~54.0.31",
    "expo-asset": "~12.0.12",
    "expo-linear-gradient": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-native": "0.83.1",
    "react-native-gesture-handler": "~2.30.0",
    "react-native-safe-area-context": "~5.6.2",
    "react-native-screens": "~4.20.0",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@biomejs/biome": "^2.3.11",
    "@types/react": "^19.2.8",
    "babel-preset-expo": "^54.0.9",
    "typescript": "^5.9.3"
  },
  "private": true,
  "packageManager": "pnpm@9.15.0"
}
